<div class=container>
	<h2><%= @vehicle.year %></h2>
	<p><%= @vehicle.make %></p>
	<p><%= @vehicle.model %></p>

	<hr>
	<%= link_to "Home", home_path, :class => 'btn btn-success' %>
	<%= link_to "Edit", edit_vehicle_path(@vehicle), :class => 'btn btn-outline-secondary' %>
	<%= link_to "Delete", vehicle_path(@vehicle), 
								method: :delete,
								data: {confirm: 'Are you sure you want to remove this vehicle?'},
								:class => 'btn btn-outline-danger' %>
</div>